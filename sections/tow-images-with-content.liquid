{{ 'presentation.css' | asset_url | stylesheet_tag }}

<div class="presentation__container">
    <h2 class="presentation__title js-fade-el">{{ section.settings.title }}</h2>
    <div class="presentation__wrap">
        <div class="presentation__col_pic js-fade-el">
            <div class="presentation__pic_wrap">
                <picture class="presentation__pic presentation__pic--v1_mod">
                    {%- if section.settings.image_1 != blank -%}
                            <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="office chair" class="presentation__img">
                    {%- else -%}
                        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                </picture>

                <picture class="presentation__pic presentation__pic--v2_mod">
                    {%- if section.settings.image_2 != blank -%}
                            <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="office chair" class="presentation__img">
                    {%- else -%}
                        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                </picture>

            </div>
        </div>
        <div class="presentation__col_content js-fade-el">
            <div class="presentation__content">
                {%- if section.settings.text_description != blank -%}
                    <div class="presentation__description">{{ section.settings.text_description }}</div>
                {% endif %}

                {% if section.settings.button_link != blank %}
                    <a href="{{ section.settings.button_link }}" class="presentation__link">
                        {{ section.settings.button_label | escape }}
                        <span class="presentation__link_icon">
                        <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6 26L26 6M26 6H11M26 6V21" stroke="#2C2929" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </span>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Tow images with content",
    "class": "section presentation",
    "tag": "section",
    "disabled_on": {
    "groups": ["header", "footer"]
    },
    "settings": [
        {
            "type": "inline_richtext",
            "id": "title",
            "default": "Voor een complete kantoorinrichting. Ontdek naast stoelen en bureaus ook kantoorkasten bij Office-Interior. Complete kantooroplossingen door ervaren projectmanagers.",
            "label": "Title"
        },
        {
            "type": "image_picker",
            "id": "image_1",
            "label": "Image 1"
        },
        {
            "type": "image_picker",
            "id": "image_2",
            "label": "Image 2"
        },
        {
            "type": "inline_richtext",
            "id": "text_description",
            "default": "Hier vindt u alles voor uw kantoor",
            "label": "Text"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Meer ontdekken ",
            "label": "Button label"
        }
    ],

    "presets": [
        {
            "name": "Tow images with content"
        }
    ]
}
{% endschema %}
